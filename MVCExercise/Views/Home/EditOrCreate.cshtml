@model MVCExercise.Models.Person.PersonFormViewModel

@{
    ViewData["Title"] = Model.Id == Guid.Empty ? "Create Person" : "Edit Person";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="@(Model.Id == Guid.Empty ? "Create" : "Edit")">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@(Model.Id == Guid.Empty ? "Create" : "Update")</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
